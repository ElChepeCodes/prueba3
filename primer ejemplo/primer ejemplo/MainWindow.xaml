<Window x:Class="primer_ejemplo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:primer_ejemplo"
        mc:Ignorable="d"
        Title="Convertidor" Height="250" Width="300">
    <Grid>
        <Label x:Name="LBCentigrados" Content="Centígrados" HorizontalAlignment="Left" Margin="10,28,0,0" VerticalAlignment="Top" Height="45" Width="144" FontSize="24" FontFamily="Comic Sans MS" Foreground="Black" FontWeight="Bold"/>
        <Label x:Name="LBFarenheit" Content="Farenheit" HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS" FontWeight="Bold" FontSize="24"/>
        <TextBox x:Name="txCentigrados" HorizontalAlignment="Left" Height="40" Margin="162,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="TxCentigrados_PreviewTextInput"/>
        <TextBox x:Name="txFarenheit" HorizontalAlignment="Left" Height="43" Margin="162,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="TxFarenheit_PreviewTextInput"/>
        <Button x:Name="BtCalcula" Content="Calcula" HorizontalAlignment="Left" Margin="184,171,0,0" VerticalAlignment="Top" Width="75" Click="BtCalcula_Click"/>
    </Grid>

</Window>
